{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@galacean/asset-tools": ["src"],
      "@galacean/asset-tools/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "declarationDir": "types",
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src", "./example"]
}
